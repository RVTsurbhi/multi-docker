{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"surbhirvt/multi-client",
            "hostname":"client",
            "essential": false
        },
        {
            "name":"server",
            "image":"surbhirvt/multi-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"surbhirvt/multi-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"surbhirvt/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}